<%- include('../includes/head.ejs')%>

  <%- include('../includes/header.ejs') %>

  <%- include('../includes/aside.ejs') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1><%= pageTitle %></h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active"><%= pageTitle %></li>
        </ol>
      </nav>
    </div>

    <section class="section dashboard">
      <div class="row">
        
        <div class="col-lg-12">
          <div class="row">

            <% for(let p of products) {%>
              <div class="col-xxl-4 col-sm-4">
                <div class="card">
                  <img src="<%= p.imageUrl %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title">  <%= p.category%> <span>| <%= p.title %></span></h5>
                    <div class="">
                      <h6><b>$</b> <%= p.price %></h6>
                      <span class="text-muted small pt-2 ps-1"> <%= p.description %></span>
                    </div>
                    <div class="">
                      <a href="/admin/edit-product/<%= p.id %>?edit=true" class="btn btn-outline-secondary">Edit</a>
                      <form class="d-inline" action="/admin/delete-product" method="POST">
                        <input type="hidden" name="productId" value="<%= p.id %>">
                        <button class="btn btn-outline-danger">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>

      </div>
    </section>

  </main>

  <%- include('../includes/foot.ejs') %>
