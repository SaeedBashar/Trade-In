<%- include('includes/head.ejs')%>

  <%- include('includes/header.ejs') %>

  <%- include('includes/aside.ejs') %>

  <main id="main" class="main">

    <div class="pagetitle">
      <h1><%= pageTitle %></h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active"><%= pageTitle %></li>
        </ol>
      </nav>
    </div>

    <section class="section dashboard">
      <div class="row">
        
        <div class="col-lg-12">
            <div class="row">

                <div class="col-xxl-4 col-md-6 offset-md-3 offset-xxl-4">
                    <div class="pt-3">
                        <form action="/admin/add-product" method="POST">
                            <div class="row mb-3">
                                <label for="title" class="col-md-4 col-lg-3 col-form-label">Product Title</label>
                                <div class="col-md-8 col-lg-9">
                                <input name="title" type="title" class="form-control" id="title">
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

      </div>
    </section>

  </main>

  <%- include('includes/foot.ejs') %>
