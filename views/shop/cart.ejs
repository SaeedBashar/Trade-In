<%- include('../includes/head.ejs')%>

  <%- include('../includes/header.ejs') %>

  <%- include('../includes/aside.ejs') %>
  
  <main id="main" class="main">
    <div class="row">
        <div class="col-12">
          <div class="card cart">

            <div class="card-body pb-0">
              <h5 class="card-title">Your Cart <span>| Products</span></h5>

              <table class="table table-borderless">
                <thead>
                  <tr>
                    <th scope="col">Preview</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">#</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(products.length > 0) {%>
                    <% products.forEach(prod=>{ %>
                      <tr>
                        <th scope="row"><a href="#"><img class="cart-img" src="<%= prod.product.imageUrl %>" alt=""></a></th>
                        <td><a href="#" class="text-primary fw-bold"><%= prod.product.title %></a></td>
                        <td><%= prod.qty %></td>
                        <td class="fw-bold">$ <%= prod.product.price * prod.qty %></td>
                        <td>
                          <form class="d-inline" action="/delete-cart-item" method="POST">
                            <input type="hidden" name="productId" value="<%=prod.product.id%>">
                            <button class="btn btn-danger btn-sm" title="Delete Cart Item"><i class="bi bi-trash"></i></button>
                          </form>
                        </td>
                      </tr>
                      <tr>
                        <th colspan="3" class="fw-bold text-center">Total Price</th>
                        <td><%= totalPrice %></td>
                        <td></td>
                      </tr>
                      <tr>
                        <td></td>
                        <td colspan="3" class="text-center">
                          <form class="d-inline" action="/order" method="POST">
                            <button class="btn btn-outline-primary">Order Now!</button>
                          </form>
                        </td>
                        <td></td>
                      </tr>
                    <% } ) %>
                  <% } else { %>
                    <tr>
                      <td colspan="4" class="text-center text-secondary">
                        <b>No Items In Cart</b>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>

            </div>

          </div>
        </div>
    </div>
  </main>

  <%- include('../includes/foot.ejs') %>